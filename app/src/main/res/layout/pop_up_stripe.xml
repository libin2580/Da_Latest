<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/background_transparency">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_rectangle_box"
            android:orientation="vertical"
            android:id="@+id/pop_layout"
            android:padding="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="40dp"

                    android:textColor="@color/colorPrimary"

                    android:background="@drawable/safe_transaction"
                    android:layout_height="50dp"
                    android:id="@+id/img_dollar"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15sdp"


                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity=""
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_titlesss"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_17sdp"
                    android:text="Transaction Details"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"

                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:text="Amount                :"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"

                    android:layout_height="wrap_content"
                    android:id="@+id/txt_pop_Amnt"
                    android:layout_gravity="center"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:text="Booking Code      :"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"

                    android:layout_gravity="center"
                    android:id="@+id/txt_pop_booking_id"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:text="Transaction         :"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"

                    android:layout_gravity="center"
                    android:id="@+id/txt_pop_transactn"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:text="Description          :"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"

                    android:layout_gravity="center"
                    android:id="@+id/txt_pop_descrptn"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Date and time      :"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/txt_pop_date_time"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_18sdp">
                <Button
                    android:layout_width="100dp"
                    android:text="Ok"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/rounded_rectangle_3"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_ok_transactn"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
