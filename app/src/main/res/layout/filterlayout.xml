<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@color/colorAccent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_tops"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"

                android:background="@drawable/navigationbarbg"

                android:navigationIcon="@android:color/white"
                app:theme="@style/ToolbarStyle"


                >

                <RelativeLayout
                    android:id="@+id/relativeLayout"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/img_crcdtlnam"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView


                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentLeft="true"

                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/back_icon_new" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/toolbar_CRCNAM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="FILTERS"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text="Clear"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="@color/filter_gary"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/fiter1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="Categories"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/fiter2"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="Location"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/fiter1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="Price"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/fiter2"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="Schedule"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/fiter1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="Duration"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/fiter1"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="Sort By"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/sort_by_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                   <!-- <CheckedTextView
                        android:id="@+id/feature_check_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:checkMark="@drawable/ic_tick_unselect"
                        android:checked="true"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Feature" />

                    <CheckedTextView
                        android:id="@+id/popularity_check_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:checkMark="@drawable/ic_tick_unselect"
                        android:checked="true"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Popularity" />

                    <CheckedTextView
                        android:id="@+id/rating_check_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:checkMark="@drawable/ic_tick_unselect"
                        android:checked="true"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Rating" />

                    <CheckedTextView
                        android:id="@+id/price_check_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:checkMark="@drawable/ic_tick_unselect"
                        android:checked="true"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Price" />

                    <CheckedTextView
                        android:id="@+id/latest_check_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:checkMark="@drawable/ic_tick_unselect"
                        android:checked="true"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Latest" />-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_sort_by"
                        style="@style/scrollbar_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:windowSoftInputMode="adjustNothing" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/catagories_list_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_vertical1"
                        style="@style/scrollbar_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:windowSoftInputMode="adjustNothing" />
                </LinearLayout>

                <com.squareup.timessquare.CalendarPickerView
                    android:id="@+id/calendar_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_show_dates"
                    android:layout_alignParentTop="true"
                    android:background="#FFFFFF"
                    android:visibility="gone"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay" />

                <RelativeLayout
                    android:id="@+id/range_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:clipChildren="false">

                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                        android:id="@+id/rangeSeekbar3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        app:bar_color="@color/colorAccent"
                        app:bar_highlight_color="@color/colorAccent"
                        app:corner_radius="2"
                        app:data_type="_integer"
                        app:gap="25"
                        app:left_thumb_color="@color/colorAccent"
                        app:left_thumb_color_pressed="@color/calendarback_colr"
                        app:right_thumb_color="@color/colorAccent"
                        app:right_thumb_color_pressed="@color/calendarback_colr" />


                    <TextView
                        android:id="@+id/textMin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rangeSeekbar3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textMax1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/rangeSeekbar3"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="16dp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/apply_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:background="@color/colorAccent"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="APPLY"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:id="@+id/progress"
        android:visibility="gone"/>

</RelativeLayout>