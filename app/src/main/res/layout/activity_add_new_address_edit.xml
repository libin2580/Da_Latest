<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/coordinatorLayout"
    android:focusableInTouchMode="true"

    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_tops"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/navigationbarbg"
            android:navigationIcon="@android:color/white"
            app:theme="@style/ToolbarStyle"
            >
            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/back_icon_new" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/toolbar_CRCNAM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="ADD NEW ADDRESS"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/plus_btn"
                        android:visibility="gone"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"

                            android:backgroundTint="@color/white"
                            android:background="@drawable/add" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:id="@+id/add_reminder_layout_top"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/address_name"
                        android:hint="Name"
                        android:textSize="@dimen/_12sdp"
                        android:backgroundTint="@android:color/darker_gray"
                        android:textColor="@android:color/black"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/address_email"
                        android:hint="Email"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"
                        android:inputType="textAutoComplete"
                        android:backgroundTint="@android:color/darker_gray"
                        android:textColor="@android:color/black"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/address_phone"
                        android:backgroundTint="@android:color/darker_gray"
                        android:hint="Phone Number"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@android:color/black"
                        android:scrollHorizontally="false"
                        android:inputType="number"
                        android:maxLength="11"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/address_city"
                        android:backgroundTint="@android:color/darker_gray"
                        android:hint="City"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@android:color/black"
                        android:scrollHorizontally="false"
                        android:inputType="textCapWords"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/address_area"
                        android:backgroundTint="@android:color/darker_gray"
                        android:hint="Area or Street"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@android:color/black"
                        android:scrollHorizontally="false"
                        android:inputType="textCapWords"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/address_flatnumber"
                        android:backgroundTint="@android:color/darker_gray"
                        android:hint="Flat no.,Building name"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@android:color/black"
                        android:scrollHorizontally="false"
                        android:inputType="textCapWords"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/addressr_state"
                                android:backgroundTint="@android:color/darker_gray"
                                android:hint="State"
                                android:textSize="@dimen/_12sdp"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:textColor="@android:color/black"
                                android:scrollHorizontally="false"
                                android:inputType="textCapWords"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="@dimen/_40sdp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/address_pin"
                                android:backgroundTint="@android:color/darker_gray"
                                android:hint="Pin"
                                android:textSize="@dimen/_12sdp"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:textColor="@android:color/black"
                                android:scrollHorizontally="false"
                                android:inputType="number"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_height="@dimen/_40sdp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/address_addr"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:text="Address Type"
                        android:imeOptions="actionNext"
                        android:textColor="@color/background_transparency"
                        android:scrollHorizontally="false"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_20sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/reminder_addresstype"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/outline_box_copy">
                        <!--    <RadioGroup
                                android:id="@+id/radioGroup1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal" >

                          &lt;!&ndash;      <RadioButton
                                    android:id="@+id/radioAndroid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/rbtn_selector"
                                    android:button="@null"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Android"
                                   />

                                <RadioButton
                                    android:id="@+id/radioiPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/rbtn_selector"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="iPhone"
                               />


                            </RadioGroup>&ndash;&gt;-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:gravity="center|left">


                            <CheckBox
                                android:id="@+id/address_work_edit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Work"
                                android:textColor="@color/background_transparency"
                                android:gravity="center|left"
                                android:button="@drawable/custom_checkbox"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_12sdp"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:gravity="center">




                            <CheckBox
                                android:id="@+id/address_home_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="Home"
                                android:textColor="@color/background_transparency"
                                android:gravity="center"
                                android:button="@drawable/custom_checkbox"
                                android:textSize="@dimen/_12sdp"
                                android:paddingRight="@dimen/_30sdp"

                                />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center"
            >


            <LinearLayout
                android:id="@+id/saves"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:background="#4797c4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="SAVE"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

