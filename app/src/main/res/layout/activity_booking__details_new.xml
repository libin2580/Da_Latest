<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/booking_details_new"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_tops"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/navigationbarbg"
                android:navigationIcon="@android:color/white"
                app:theme="@style/ToolbarStyle">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeLayout">

                    <ImageView

                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:background="@drawable/back_icon_new"
                        android:id="@+id/img_crcdtlnam"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOOKING DETAILS"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textAllCaps="true"
                        android:id="@+id/toolbar_CRCNAM"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/cart"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:id="@+id/cart" />
                        <LinearLayout
                            android:layout_width="@dimen/_11sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:background="@drawable/cart_background"
                            android:layout_centerHorizontal="true"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/_7sdp"
                                android:textColor="#ffffff"
                                android:id="@+id/txt_cart_number"
                                android:layout_centerHorizontal="true"
                                />
                        </LinearLayout>


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/home" />


                </RelativeLayout>


            </android.support.v7.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="9">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:id="@+id/txt_book_title"
                            android:textColor="@color/black"
                            android:text="Gardens By The Bay"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/calendar2"
                                android:layout_width="wrap_content"
                                android:visibility="visible"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:id="@+id/cal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:id="@+id/imageview_book"
                                    android:layout_gravity="center"
                                    android:background="@drawable/booking_details"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:text="@string/note_deal"
                                    android:id="@+id/calendar_information"

                                    />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/linear_sch"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/layout_selected_date"
                            android:background="@drawable/bg_box"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:layout_height="match_parent"
                                android:text="Selected Date"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/button_othrcolor"
                                android:id="@+id/textView2" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:layout_height="match_parent"
                                android:id="@+id/scheduled_date"
                                android:textSize="@dimen/_12sdp"
                                android:text=""
                                android:textColor="@color/black"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/layout_selected_time"
                            android:background="@drawable/bg_box"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:gravity="left|center"
                                android:text="Timing of Gift Delivery"
                                android:textColor="@color/button_othrcolor" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/scheduled_time"
                                android:gravity="left|center"
                                android:textSize="@dimen/_12sdp"
                                android:text=""
                                android:textColor="@color/black"
                                />

                        </LinearLayout>



                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/recyclerView">

                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/linr_cmnt"
                        android:background="@drawable/bg_box">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/white">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="left|top"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/comment"
                                android:hint="Comment"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:text="GO TO CART"
                android:id="@+id/next"
                android:visibility="gone"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:layout_height="match_parent"
                android:background="@color/button_othrcolor"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="0dp"
                android:text="Add To Cart"
                android:id="@+id/add_to_cart"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:layout_height="match_parent"
                android:background="@color/button_othrcolor"
                android:textColor="@color/white"/>


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_explore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background ="@xml/progress" />
</RelativeLayout>
