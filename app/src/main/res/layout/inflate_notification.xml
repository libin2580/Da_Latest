<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white"
android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_12sdp"

                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/label_round_new" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_notif_evnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_notif_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"></TextView>

            <TextView
                android:id="@+id/txt_notif_dealTim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_notif_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.30 pm"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:background="@drawable/arrow_item_right"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
