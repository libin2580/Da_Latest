<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/login_background"
 >

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_tops"
        android:layout_height="@dimen/_45sdp"
        android:layout_width="match_parent"

        android:background="@drawable/navigationbarbg"

        android:navigationIcon="@android:color/white"
        app:theme="@style/ToolbarStyle"



        >

        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
            >

            <ImageView

                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/back_icon_new"
                android:id="@+id/img_crcdtlnam"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/toolbar_CRCNAM"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@drawable/box"
     android:layout_marginBottom="@dimen/_40sdp"
     android:layout_marginLeft="@dimen/_20sdp"
     android:layout_marginRight="@dimen/_20sdp"
     android:layout_marginTop="@dimen/_60sdp"
     android:orientation="vertical"
>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:orientation="vertical"
         android:gravity="center"
         android:paddingTop="@dimen/_20sdp"
         android:layout_weight="3">
         <ImageView
             android:layout_width="wrap_content"
             android:background="@drawable/dateout_logo"


             android:layout_height="wrap_content" />

         <TextView
             android:layout_width="@dimen/_120sdp"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/txt_address"
             android:text=""/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="0.01"
         android:layout_margin="@dimen/_10sdp"
         android:background="@drawable/separator_twopx_dark"></LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
        android:gravity="center"
         android:orientation="horizontal"
         android:layout_weight="2">
         <LinearLayout
             android:layout_width="0dp"
             android:id="@+id/lin_phone"
             android:layout_weight="1"
             android:gravity="center"
             android:orientation="vertical"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_width="wrap_content"
                 android:id="@+id/phone"
                 android:background="@drawable/call_one"
                 android:layout_height="wrap_content" />

             <TextView
                 android:layout_width="wrap_content"
                 android:id="@+id/txt_phone"
                 android:text=""
                 android:textSize="@dimen/_12sdp"
                 android:layout_margin="@dimen/_5sdp"
                 android:layout_height="wrap_content" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:id="@+id/lin_mail"
             android:layout_weight="1"
             android:gravity="center"
             android:orientation="vertical"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_width="wrap_content"
                 android:id="@+id/mail"
                 android:background="@drawable/email_one"
                 android:layout_height="wrap_content" />
             <TextView
                 android:layout_width="wrap_content"
                 android:id="@+id/txt_email"
                 android:text=""
                 android:textSize="@dimen/_12sdp"
                 android:layout_margin="@dimen/_5sdp"
                 android:layout_height="wrap_content" />
         </LinearLayout>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="0.01"
         android:layout_margin="@dimen/_10sdp"
         android:background="@drawable/separator_twopx_dark"></LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:gravity="top|center"
         android:orientation="horizontal"
         android:layout_weight="3">
         <ImageView
             android:layout_width="@dimen/_18sdp"
             android:layout_height="@dimen/_18sdp"
             android:layout_margin="@dimen/_5sdp"
             android:background="@drawable/instgram"
             android:id="@+id/cntctt_insta"/>
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/facebook"
            android:id="@+id/cntctt_fb"/>
         <ImageView
             android:layout_width="@dimen/_18sdp"
             android:layout_height="@dimen/_18sdp"
             android:layout_margin="@dimen/_5sdp"
             android:visibility="gone"
             android:background="@drawable/google_plus"
             android:id="@+id/cntctt_google"/>
         </LinearLayout>
 </LinearLayout>

</FrameLayout>
