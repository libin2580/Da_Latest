<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    android:background="@drawable/login_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:background="@drawable/login_box"
            android:paddingTop="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"

            android:layout_weight="0.88">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1.1"

                android:gravity="bottom"

                >

                <ImageView
                    android:layout_width="@dimen/_135sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_new"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_weight="5"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_5sdp">


                <EditText
                    android:id="@+id/edit_usernm"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"


                    android:background="@drawable/edittext_background"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elegantTextHeight="false"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center|left"
                    android:hint="UserName"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_13sdp" />


                <EditText
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/edt_pass"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:hint="Password"
                    android:gravity="center|left"
                    android:textSize="@dimen/_13sdp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="sans-serif-light"
                    android:elegantTextHeight="false"
                    android:layout_marginBottom="@dimen/_20sdp"

                    android:inputType="textPassword"
                    android:drawablePadding="@dimen/_11sdp"

                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColorHint="@android:color/darker_gray"
                    android:drawableLeft="@drawable/lock"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Forgot Password?"
                    android:textColor="@android:color/black"
                    android:id="@+id/frgt"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_40sdp" />

                <Button
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/login"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp"

                    android:background="@drawable/login_button"

                    android:textColor="@android:color/white"
                    android:paddingBottom="@dimen/_5sdp"

                    android:text="Sign In"
                    android:layout_marginBottom="@dimen/_6sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="0.7"
                android:weightSum="1"
                android:id="@+id/redister_lay">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't Have An account?"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"

                    android:textColor="@android:color/black"
                    android:id="@+id/txt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/here"
                    android:textColorLink="@color/button_othrcolor"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:textColor="@color/button_othrcolor"
                    android:id="@+id/txtregister" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/log_divider"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="                                      Or Sign In With"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="right"



                    android:id="@+id/textView" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:id="@+id/txt_idfb"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/facebook"
                    />
                <TextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:id="@+id/txt_id_googl"
                    android:background="@drawable/google_plus"

                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:id="@+id/guest"
                android:gravity="right"
                android:text="skip"/>

        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#0067b6"
        android:layout_centerInParent="true" />



    <!--google login component &#45;&#45;start-->
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/profileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Name"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewName"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:visibility="gone"

        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textViewEmail"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--google login components &#45;&#45;end-->

    <!--/*facebook login components &#45;&#45;start*/-->
    <com.facebook.login.widget.LoginButton
        android:layout_marginTop="50dp"
        android:id="@+id/login_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--/*facebook login components &#45;&#45;end*/-->

</RelativeLayout>